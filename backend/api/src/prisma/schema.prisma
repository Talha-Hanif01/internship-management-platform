// prisma/schema.prisma
datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  role         String
  createdAt    DateTime @default(now())
  mentorId     String?  
  mentor       User?    @relation("MentorInterns", fields: [mentorId], references: [id])
  interns      User[]   @relation("MentorInterns")
  refreshToken String?
}
